# Size 'K'
regexp=\s\d*[.,]?\dKi?|\b\d{1,3}\b
colours=green
======
# Size 'M'
regexp=\s\d*[.,]?\dMi?|\b\d{4,6}\b
colours=yellow
======
# Size 'G'
regexp=\s\d*[.,]?\dGi?|\b\d{7,9}\b
colours=red
======
# Size 'T'
regexp=\s\d*[.,]?\dTi?|\b\d{10,12}\b
colours=bold red
======
# Mem
regexp=^Mem
colours=bold cyan
======
# Swap
regexp=^Swap
colours=bold magenta
======
# Zero
regexp=\s+0\w?(\s|$)
colours=green
